<% provide(:title, 'All Users') %>

<h1>All Users</h1>

<%= will_paginate %>

<ul class="users">
	<% @users.each do |user| %>
		<li>
			<%= gravatar_for user  %>
			<strong><%= link_to user.name, user %></strong>
			<% if current_user.admin? && !current_user(user) %>
				|	<%= link_to "Delete", user, method: "delete", data: {confirm: "Are you sure?"} %>
				<% end %>
		</li>
	<% end %>
</ul>

<%= will_paginate %>


